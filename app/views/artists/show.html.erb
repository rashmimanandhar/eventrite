<h1><%= @artist.name %></h1>
<%= link_to "Edit", edit_artist_path(@artist) %>
<% @artist.shows.each do |show| %>
  <% if show.event_on < Date.today %>
    <h2>Past shows</h2>
    <%= show.event_on %>
  <% else %>
    <h2>Upcoming shows</h2>
    <span>Event is on <%= show.event_on %> @ <%= link_to show.venue.name, show.venue%> in 
      <%= show.venue.city.name %></span>
  <%end%>
<% end %>
